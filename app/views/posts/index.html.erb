<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <%= link_to "Show this post", post.title %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= truncate(sanitize post.description.body.to_plain_text, length: 200) %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
